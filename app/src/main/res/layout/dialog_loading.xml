<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#80000000"> <!-- Semi-transparent black background -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="25dp"
        android:background="@drawable/parchment_texture"> <!-- Using your parchment texture for theme consistency -->

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/ink_text" /> <!-- The color of your main text -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Detecting Emotion..."
            android:textColor="@color/ink_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/cinzel"/> <!-- Using your theme font -->
    </LinearLayout>

</RelativeLayout>
